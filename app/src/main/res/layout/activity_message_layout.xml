<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x42"
                android:background="@color/bgtitle"
                android:visibility="visible">

                <FrameLayout
                    android:id="@+id/rl_back"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@mipmap/fanhui" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="基本资料"
                    android:textColor="@color/bgfff"
                    android:textSize="@dimen/x16" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_change_touxiang"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="头像"
                        android:textColor="#333"
                        android:textSize="@dimen/x12" />


                    <ImageView
                        android:id="@+id/img_goto"
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:src="@mipmap/you" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/SimpleDraweeView"
                        android:layout_width="@dimen/x33"
                        android:layout_height="@dimen/x33"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_toLeftOf="@id/img_goto"
                        fresco:roundAsCircle="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ccc"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="商户编号："
                        android:textColor="#333"
                        android:textSize="@dimen/x12" />

                    <ImageView
                        android:id="@id/img_goto"
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:src="@mipmap/you"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_bihao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_toLeftOf="@id/img_goto"
                        android:text=""
                        android:textSize="@dimen/x13" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ccc"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="手机号："
                        android:textColor="#333"
                        android:textSize="@dimen/x12" />

                    <ImageView
                        android:id="@id/img_goto"
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:src="@mipmap/you"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_toLeftOf="@id/img_goto"
                        android:textSize="@dimen/x13" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ccc"></View>

                <RelativeLayout
                    android:id="@+id/r_change_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="昵称："
                        android:textColor="#333"
                        android:textSize="@dimen/x12" />

                    <ImageView
                        android:id="@id/img_goto"
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:src="@mipmap/you" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_nicheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_toLeftOf="@+id/img_goto"
                        android:layout_toStartOf="@+id/img_goto"
                        android:textSize="@dimen/x13" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ccc"></View>

                <RelativeLayout
                    android:id="@+id/rl_shifushanghu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="师傅商户帐号："
                        android:textColor="#333"
                        android:textSize="@dimen/x12" />

                    <ImageView
                        android:id="@id/img_goto"
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:src="@mipmap/you" />

                    <TextView
                        android:id="@+id/tv_shifu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_toLeftOf="@id/img_goto"
                        android:textSize="@dimen/x13" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ccc"></View>

                <RelativeLayout
                    android:id="@+id/rl_zhifubaozhanghu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="支付宝账户："
                        android:textColor="#333"
                        android:textSize="@dimen/x12" />

                    <ImageView
                        android:id="@id/img_goto"
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:src="@mipmap/you" />

                    <TextView
                        android:id="@+id/tv_zfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_toLeftOf="@id/img_goto"
                        android:textSize="@dimen/x13" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ccc"></View>

                <RelativeLayout
                    android:id="@+id/rl_change_psw"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="修改密码："
                        android:textColor="#333"
                        android:textSize="@dimen/x12" />

                    <ImageView
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:src="@mipmap/you" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
