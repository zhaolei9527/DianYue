<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/x42"
                android:background="@color/bgtitle"
                android:visibility="visible">

                <FrameLayout
                    android:id="@+id/rl_back"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@mipmap/fanhui" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="会员升级"
                    android:textColor="@color/bgfff"
                    android:textSize="@dimen/x16" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y155"
                android:background="@mipmap/rule_banner" />


            <LinearLayout
                android:id="@+id/ll_lv1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y30"
                android:layout_marginTop="@dimen/x15"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/vip_ico1" />

                <TextView
                    android:id="@+id/tv_lv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x10"
                    android:text="升级VIP会员"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lv2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y30"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/vip_ico2" />


                <TextView
                    android:id="@+id/tv_lv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x10"
                    android:text="升级白金会员"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lv3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y30"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/vip_ico3" />

                <TextView
                    android:id="@+id/tv_lv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x10"
                    android:text="升级钻石会员"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x14" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x12"
                android:background="@drawable/bg_login"
                android:gravity="center"
                android:text="确定升级（0.0）"
                android:textColor="@color/bgfff"
                android:textSize="@dimen/x15" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#77000000"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y240"
            android:layout_gravity="bottom"
            android:background="@color/bgfff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_dismiss"
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x10"
                    android:background="@mipmap/left_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="选择支付方式"
                    android:textColor="@color/text333" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/bgea"></View>

            <LinearLayout
                android:id="@+id/ll_checkali"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y30"
                android:layout_marginTop="@dimen/x25"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@mipmap/pay_zfb" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x12"
                    android:layout_weight="1"
                    android:text="支付宝支付"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x15" />

                <ImageView
                    android:id="@+id/img_checkali"
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x12"
                    android:background="@mipmap/check_yes"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_checkwechat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y30"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@mipmap/lwechat" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x12"
                    android:layout_weight="1"
                    android:text="微信支付"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x15" />

                <ImageView
                    android:id="@+id/img_checkwechat"
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x12"
                    android:background="@mipmap/check_yes"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x20"
                android:background="@drawable/bg_login"
                android:gravity="center"
                android:text="确定升级"
                android:textColor="@color/bgfff"
                android:textSize="@dimen/x15" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
